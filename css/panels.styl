div[role=main]
	margin-top 2em

article
	margin-bottom 40px

h4
	color chocolate
	border-bottom 1px solid darken(bg, 20%)
	padding-bottom 16px
	margin-bottom 16px

li:last-child h4
	border-bottom none

.active
	border-bottom none
	margin-bottom 0

.noBorder
	border-bottom none

article h2, article h4, article ul
	margin-top 0

article h2, article h4
	cursor pointer

article header
	border 3px dashed darken(bg, 40%)
	padding 15px 40px
	margin-bottom 0
	border-radius 10px
	cursor pointer

	h2
		font-family 'Noticia Text'
		color headings
		text-shadow 0 -1px 0 darken(headings, 10%)
		margin-bottom 5px

	code
		text-shadow 0 1px 0 lighten(bg, 40%)
		font-size .8em
		color black

	p
		color darken(bg, 60%)
		font-style italic

article ul
	width 90%
	border 3px dashed darken(bg, 40%)
	border-top none
	padding-right 40px
	position relative
	top -3px
	background bg
	margin auto
	box-sizing border-box

	li
		list-style none
		padding-top 20px

		&:nth-child(n+2)
			padding-top 0
		

pre.prettyprint
	background lighten(bg, 20%)
	cursor pointer
	border 1px solid darken(bg, 20%)
	margin-top -10px
	font-size .8em

.selectedCode
	background white !important

.body
	max-width 700px
	margin-bottom 30px
